{% extends "template.jade" %}
{% block content %}

#container.col
  .col-md-4.full-hight
    {% raw %}
    .well.well-sm
      .tree.well
        ul
          li
            span.glyphicon.glyphicon-folder-open
              nbsp
              | Courses
            ul              
              li(ng-repeat="section in sections | inArray:openSections | orderBy:'toString()'", on-finish-render-section)
                span.glyphicon.glyphicon-plus-sign(ng-click='expandSection(section)')
                  nbsp
                  | {{capitalizeEachWord(section)}}
                ul
                  li(ng-repeat="level in levels[section] | orderBy:'toString()'", on-finish-render-level)
                    span.glyphicon.glyphicon-plus-sign(ng-click='expandLevel(section, level)')
                      nbsp
                      | {{capitalizeEachWord(level)}}
                    ul
                      li(ng-repeat="question in questions[section][level] | orderBy:'toString()'", on-finish-render-question)
                        span.glyphicon(ng-click='selectQuestion(section, level, question)' ng-class="hasAnswered(section,level,question)?'question-done glyphicon-ok-sign':'question-not-done glyphicon-question-sign'")
                          nbsp
                          a(href="")
                            | ${{question}}


    {% endraw %}
  .col-md-1.full-height

  .col-md-7.full-height
    include questionForm

{% endblock %}
